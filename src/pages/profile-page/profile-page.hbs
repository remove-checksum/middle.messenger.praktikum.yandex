{{#extend "page"}}
  {{#content "head"}}
    <link rel="stylesheet" href="./profile-page.css">
    <script src="https://unpkg.com/phosphor-icons"></script>
    <script src="./profile-page.js" type="module" defer></script>
    <title>{{pages.profile-page}}</title>
  {{/content}}
  {{#content "content"}}
      <section class="profile-page">
        <button class="close-button profile-page__close-button">
          <i class="ph-x close-button__icon">
        </button>
        {{> avatar/avatar inputLabel=user.avatar.label inputName="avatar" imgUrl=user.avatar.url}}
        <h2 class="profile-page__username">{{user.fields.display_name.value}}</h2>
        {{> redactable-rows/redactable-rows fields=user.fields redacting=false}}
        <div class="profile-page__action-buttons">
          {{> button/button text="Изменить данные" extraClass="profile-page__button"}}
          {{> button/button text="Изменить пароль" extraClass="profile-page__button"}}
          {{> button/button text="Выйти" kind="warning" extraClass="profile-page__button"}}
        </div>
      </section>
  {{/content}}
{{/extend}}